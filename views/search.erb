<!doctype html>
<html lang=en>
  <head>
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
    <!-- <link href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet"> -->
    <meta charset=utf-8>
    <title>ACNH HHA Score Calculator</title>
  </head>

  <body>
  
    <nav class="topbar">
      <div class="logo"><a href="/">HHA Score Calculator</a></div>

      <ul class="nav-links">
        <div class="menu">
          
          <li><a href="/">Home</a></li>

          <li><a href="/search">Search</a></li>
          
          <li class="myhouse-dropdown">
            <a href="/myhouse">My House</a>
            <ul class="dropdown">
              <li><a href="/myhouse/mainroom">Main Room</a></li>
              <li><a href="/myhouse/leftroom">Left Room</a></li>
              <li><a href="/myhouse/rightroom">Right Room</a></li>
              <li><a href="/myhouse/backroom">Back Room</a></li>
              <li><a href="/myhouse/topfloor">Top Floor</a></li>
              <li><a href="/myhouse/basement">Basement</a></li>
            </ul>
          </li>

          <li><a href="/profile">[ICO]</a></li>

        </div>
      </ul>
    </nav>
    
    <div class="info">
      <h3>Search Filters</h3>
      <form class="search-filters" method="POST" action="/search">
        <table class="search-terms">
          <tr>
            <td>Name: <input type="text" class="input-name" /></td>
            <td>Concept:
              <select id="concept1" name="Concept 1" size="1">
                <option value="val1">Value 1</option>
                <option value="val2">Value 2</option>
                <option value="val3">value 3</option>
              </select>
              <select id="concept1" name="Concept 2" size="1">
                <option value="val1">Value 1</option>
                <option value="val2">Value 2</option>
                <option value="val3">value 3</option>
              </select>
            </td>
          </tr>
          <tr>
            <td>Kind:
              <select id="kind" name="Kind" size="1">
                <option value="val1">Value 1</option>
                <option value="val2">Value 2</option>
                <option value="val3">value 3</option>
              </select>
            </td>
            <td>Series:
              <select id="series" name="Series" size="1">
                <option value="val1">Value 1</option>
                <option value="val2">Value 2</option>
                <option value="val3">value 3</option>
              </select>
            </td>
          </tr>
          <tr>
            <td>Size:
              <select id="size" name="Size" size="1">
                <option value="val1">Value 1</option>
                <option value="val2">Value 2</option>
                <option value="val3">value 3</option>
              </select>
            </td>
            <td>Set:
              <select id="set" name="Set" size="1">
                <option value="val1">Value 1</option>
                <option value="val2">Value 2</option>
                <option value="val3">value 3</option>
              </select>
            </td>
          </tr>
          <tr>
            <td>Surface:
              <select id="surface" name="Surface" size="1">
                <option value="yes">Yes</option>
                <option value="no">No</option>
              </select>
            </td>
            <td>Category:
              <select id="category" name="Category" size="1">
                <option value="val1">Value 1</option>
                <option value="val2">Value 2</option>
                <option value="val3">value 3</option>
              </select>
            </td>
          </tr>
          <tr>
            <td>Color:
              <select id="color1" name="Color 1" size="1">
                <option value="val1">Value 1</option>
                <option value="val2">Value 2</option>
                <option value="val3">value 3</option>
              </select>
              <select id="color2" name="Color 2" size="1">
                <option value="val1">Value 1</option>
                <option value="val2">Value 2</option>
                <option value="val3">value 3</option>
              </select>
            </td>
            <td>Points:
              <select id="sort-points" name="Sort Points" size="1">
                <option value="lohi">Lo-to-Hi</option>
                <option value="hilo">Hi-to-Lo</option>
              </select>
            </td>
          </tr>
        </table>
      </form>
    </div>

    <%= yield %>

    <div class="bottombar">
      <h3>&copy; jannapps</h3>
    </div>

  </body>
</html>